<div class="show"></div>

<p id="notice"><%= notice %></p>


<table class='table-bordered paddingit'>
  <thead class='paddingit'>
    <tr>
    <th class='paddingit'>User_id</th>
      <th class='paddingit'>Url</th>
      <th class='paddingit'>Headline</th>
      <th class='paddingit'>Headline_style</th>
      <th class='paddingit'>Content</th>
      <th class='paddingit'>Content_style</th>
      <th class='paddingit'>Bg_style</th>
      <th class='paddingit'>Image URL</th>
      <th class='paddingit'>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
<td><% if page.user %>
<%= page.user.email %>
<% end %>
</td>
        <td class='paddingit'><%= page.url %></td>
        <td class='paddingit'><%= page.headline %></td>
        <td class='paddingit'><%= page.headline_style %></td>
        <td class='paddingit'><%= page.content %></td>
        <td class='paddingit'><%= page.content_style %></td>
        <td class='paddingit'><%= page.bg_style %></td>
        <td class='paddingit'><%= page.imgurl %></td>
        <td class='paddingit'><%= page.published %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

