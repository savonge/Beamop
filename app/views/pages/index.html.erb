<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<table class='table-bordered' style="padding:22px">
  <thead>
    <tr>
    <th>User_id</th>
      <th>Url</th>
      <th>Headline</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
<td><% if page.user %>
<%= page.user.email %>
<% end %>
</td>
        <td><%= page.url %></td>
        <td><%= page.headline %></td>
        <td><%= page.content %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

